{
  "name": "markdown-cjk-friendly",
  "private": true,
  "scripts": {
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "lint": "run-s lint:prebuild lint:postbuild",
    "lint:prebuild": "run-s lint:biome",
    "lint:postbuild": "run-s lint:type",
    "lint:type": "pnpm -r lint:type",
    "lint:biome": "biome check",
    "fix": "run-s fix:*",
    "fix:biome": "biome check --write",
    "print-ranges": "node --experimental-strip-types scripts/cjk-ranges.ts"
  },
  "workspaces": ["packages/*"],
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@rslib/core": "^0.4.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.5",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "vitest": "^3.0.2"
  },
  "packageManager": "pnpm@9.15.3"
}
