{
  "scripts": {
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "test:lib": "pnpm -r test:lib",
    "build:lib": "pnpm -r build:lib",
    "build:website": "pnpm -r build:website",
    "lint": "run-s lint:prebuild lint:postbuild",
    "lint:prebuild": "run-s lint:biome",
    "lint:postbuild": "run-s lint:type",
    "lint:type": "pnpm -r lint:type",
    "lint:biome": "biome check",
    "fix": "run-s fix:*",
    "fix:biome": "biome check --write",
    "postupdate:biome": "biome migrate --write",
    "print-ranges": "node --experimental-strip-types scripts/cjk-ranges.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@rslib/core": "^0.4.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.32",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^8.0.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.0",
  "pnpm": {
    "overrides": {
      "refractor@3.6.0>prismjs": "^1.30.0",
      "compression@1.8.0>on-headers": "1.1.0"
    }
  }
}
