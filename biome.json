{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "packages/*/dist/**",
      "**/auto-imports.d.ts",
      "**/__snapshots__/**",
      "demos/astro/.astro/**",
      "demos/astro/dist/**",
      "demos/docusaurus/.docusaurus/**",
      "demos/docusaurus/build/**",
      "demos/rspress/doc_build/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
